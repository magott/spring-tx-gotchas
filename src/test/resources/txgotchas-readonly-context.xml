<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${${db.platform}.jdbc.driver}" />
		<property name="url" value="${${db.platform}.jdbc.url}" />
		<property name="username" value="${${db.platform}.jdbc.user}" />
		<property name="password" value="${${db.platform}.jdbc.password}" />
	</bean>

	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="createTableStatement" class="java.lang.String">
		<constructor-arg><value>${createTableStatement}</value></constructor-arg>
	</bean>
	
	<bean id="requiredReadOnly" class="no.magott.jz.txgotchas.ReadOnlyInPropagationDefinitionTest$RequiredReadOnly"/>
	
	<context:property-placeholder location="classpath:jdbc.properties" />

</beans>
